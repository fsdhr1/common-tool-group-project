<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="单个开启"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_GPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启GPS" />

        <Button
            android:id="@+id/bt_net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启NET" />

        <Button
            android:id="@+id/bt_bd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启BD" />

        <Button
            android:id="@+id/bt_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通用定位" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="单个关闭"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_stop_Gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭GPS" />

        <Button
            android:id="@+id/bt_stop_Net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束Net" />

        <Button
            android:id="@+id/bt_stop_bd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭BD" />

        <Button
            android:id="@+id/bt_stop_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束通用" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="关闭某一类型定位"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_type_net"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="结束Net类型" />

        <Button
            android:id="@+id/bt_type_Gps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="结束Gps类型" />

        <Button
            android:id="@+id/bt_type_common"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="结束通用类型" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginVertical="15dp"
        android:background="#e1e1e1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="测试页面"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test_1_Activity" />

        <Button
            android:id="@+id/bt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test_2_Activity" />

    </LinearLayout>


</LinearLayout>