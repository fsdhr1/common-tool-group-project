<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true">

    <LinearLayout
        android:id="@+id/ll_hv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6.5dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="#0268FB"
           >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.5dp"
                android:text="焦作市发布雷电黄色预警信号"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="9dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:padding="1dp"
                app:srcCompat="@mipmap/ic_close" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="13.5dp"
                android:textColor="#666666"
                android:textSize="11sp"
                android:text="发布时间：2021-07-07 14:00" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="14.5dp"
                android:textColor="#333333"
                android:lineSpacingExtra = "8dp"
                android:textSize="11sp"
                android:text="焦作市气象台07月07日14时03分发布雷电黄色预警信号：预计今天下午到夜里 我市将有雷电活动，局部地区可能伴有 短时强降水、短时大风、冰雹等强对流 天气，请注意防范。" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_triangle"
        android:layout_width="45dp"
        android:layout_height="24dp"
        android:layout_below="@+id/ll_hv"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_rectangle_corner"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="8dp"
            android:layout_height="12.5dp"
            android:layout_weight="1"
            android:layout_marginLeft="7dp"
            app:srcCompat="@mipmap/ic_ld" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#333333"
            android:layout_weight="1"
            android:text="雷电" />
    </LinearLayout>


    <ImageView
        android:layout_below="@+id/ll_triangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-1dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/triangle_up" />
</RelativeLayout>