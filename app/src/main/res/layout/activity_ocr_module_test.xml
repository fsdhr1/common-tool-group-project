<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    tools:context=".ocrModuletest.OcrModuleTestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/id_card_front_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="身份证正面"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/id_card_back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="身份证反面"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/bankcard_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="银行卡识别"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/business_license_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="营业执照识别"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/animalDetect_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="动物识别"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/plantDetect_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="植物识别"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/ingredient_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="果蔬识别"
            tools:ignore="HardcodedText" />
        <Button
            android:text="身份证正面离线"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_card_front_button_outline"
            tools:ignore="HardcodedText"/>
        <Button
            android:text="身份证反面离线"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_card_back_button_outline"
            tools:ignore="HardcodedText"/>
        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bankcard_button_outline"
            android:text="银行卡识别离线"
            tools:ignore="HardcodedText"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>