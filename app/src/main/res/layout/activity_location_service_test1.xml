<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/bt_test1_net_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束Net服务"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_test1_net_open"
        app:layout_constraintTop_toTopOf="@+id/bt_test1_net_open" />

    <Button
        android:id="@+id/bt_test1_net_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启本页面Net服务"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="48dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="跳转Test2页面"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_test1_net_open" />
</androidx.constraintlayout.widget.ConstraintLayout>