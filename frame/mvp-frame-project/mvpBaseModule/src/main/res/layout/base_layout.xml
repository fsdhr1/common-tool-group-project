<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="50dp">
        <LinearLayout
            android:id="@+id/ll_base_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_base_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@null"
                android:tint="@android:color/white"
                android:src="@drawable/back"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="#fff"
                android:visibility="invisible"
                android:text="返回"
                />
        </LinearLayout>
        
        <TextView
            android:id="@+id/tv_base_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="标题"/>
        <LinearLayout
            android:id="@+id/ll_etParent"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/ll_base_back"
            android:layout_toLeftOf="@id/ll_right"
            android:background="@drawable/button_group_backgroud"
            android:visibility="gone"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/back"
                android:drawablePadding="5dp"
                android:imeOptions="actionSearch"
                android:hint="请输入产品名称"
                android:maxLength="20"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="#3fa3dc"
                android:textColorHint="#c7c7c7"
                android:textSize="14sp"/>
            <ImageView
                android:id="@+id/iv_clear_text"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="7dp"
                android:visibility="gone"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:visibility="visible"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_right_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/save"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                />
            <TextView
                android:id="@+id/tv_base_rightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textColor="#fff"
                android:text="保存"
                />
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>