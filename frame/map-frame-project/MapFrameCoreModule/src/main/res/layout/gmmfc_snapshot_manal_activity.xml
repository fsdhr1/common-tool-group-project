<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/flContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.grandtech.mapframe.core.snapshot.view.SquareMapView
            android:id="@+id/gmmfc_squareBoxMapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapbox:mapbox_uiCompass="false"
            mapbox:mapbox_uiLogo="false"
            mapbox:mapbox_uiRotateGestures="false"
            mapbox:mapbox_uiTiltGestures="false" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/gmmfc_takePic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:onClick="onTakePhotoClicked"
                android:src="@mipmap/gmmfc_manual_snapshot_select" />

        </RelativeLayout>
    </FrameLayout>

</LinearLayout>