<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/flMainFrame"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <com.gradtech.mapframev10.core.maps.GMapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.gradtech.mapframev10.core.maps.GMapView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_hz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绘制"></Button>
            <Button
                android:id="@+id/btn_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定位"></Button>
            <Button
                android:id="@+id/btn_moveToLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跳转到指定点"></Button>
            <Button
                android:id="@+id/btn_moveToLocationByGeometry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跳转到指定点根据绘制的Geometry"></Button>

            <Button
                android:id="@+id/btn_add_markerview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加markerView"></Button>

            <Button
                android:id="@+id/btn_add_marker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加marker"></Button>

            <Button
                android:id="@+id/btn_add_simple_marker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加默认marker(参照9.x版本样式)"></Button>
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>